<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- ==================================================================
Configure and deploy the test web application in $(jetty.home)/webapps/test

Note. If this file did not exist or used a context path other that /test
then the default configuration of jetty.xml would discover the test
webapplication with a WebAppDeployer.  By specifying a context in this
directory, additional configuration may be specified and hot deployments
detected.
===================================================================== -->

<Configure class="org.eclipse.jetty.webapp.WebAppContext">


  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- Required minimal context configuration :                        -->
  <!--  + contextPath                                                  -->
  <!--  + war OR resourceBase                                          -->
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <Set name="contextPath">/service</Set>
  <Set name="war"><SystemProperty name="jetty.home" default="."/>/webapps/service.war</Set>
  <Set name="virtualHosts">
    <Array type="java.lang.String">
      <Item>@defaultConnector</Item>
      <Item>@defaultConnectorWindows</Item>
    </Array>
  </Set>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <!-- Optional context configuration                                  -->
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <!-- If no temp directory is configured, the system temp folder is used. -->
  <Call name="setInitParameter">
      <Arg>docTempDir</Arg>
      <Arg>pdfreactor/doctemp</Arg>
  </Call>
  <Call name="setInitParameter">
      <Arg>fontCacheDir</Arg>
      <Arg>pdfreactor/fontcache</Arg>
  </Call>
  
  <!--  Disabling the document temp folder causes async conversions to be unavailable. -->
  <Call name="setInitParameter">
      <Arg>disableDocTemp</Arg>
      <Arg>false</Arg>
  </Call>
  
  <!-- Uncomment the following lines to change the amount of threads. The default value is automatically calculated. -->
  <!--
  <Call name="setInitParameter">
      <Arg>threadPoolSize</Arg>
      <Arg>8</Arg>
  </Call>
  -->
  
  <!-- Uncomment the following lines if you use a load balancer. -->
  <!--
  <Call name="setInitParameter">
      <Arg>loadBalancerCookie</Arg>
      <Arg>AWSELB</Arg>
  </Call>
  -->

</Configure>
